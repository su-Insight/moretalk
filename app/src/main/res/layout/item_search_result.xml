<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/background_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/imageContactAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_myplaces"
                android:scaleType="centerCrop"
                android:background="@color/background_elevated" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/textContactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名: 张三"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/textContactWechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信: zhangsan"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_menu_info_details_small" />

            <TextView
                android:id="@+id/textContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机: 13800138000"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_menu_call_small" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>